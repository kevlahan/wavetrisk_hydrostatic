test_case          "DCMIP2012c4" ! name of test case
run_id             "DCMIP2012c4_J7" ! name of run (for saved data)
compressible       T             ! compressible (T) or incompressible (F) equations
max_level	   7             ! maximum level of resolution
zlevels            26            ! number of vertical levels
uniform            F             ! uniform (T) or hybrid (F) vertical grid
remap              T             ! remap vertical grid
min_allowed_mass   1.0           ! minimum allowed relative mass before remapping
adapt_trend        F             ! adapt on trend (T) or variables (F)
default_thresholds F             ! use default tolerances (T) or calculate tolerances dynamically (F)
perfect            F             ! use perfect reconstruction criterion (T) or less conservative wavetrisk criterion (F)
tol      	   1e-2           ! non-dimensional tolerance
optimize_grid	   2             ! NO_OPTIM = 0, XU_GRID = 1, HR_GRID = 2
adapt_dt           T             ! adapt time step dynamically (T) or used fixed time step (F)
cfl_num            1.4           ! cfl number
pressure_save      850           ! save vertical layer closest to this pressure (hPa)
Laplace_order      2             ! 0 = no diffusion, 1 = Laplacian diffusion, 2 = second order Laplacian hyperdiffusion
dt_write           240           ! save interval (minutes)
CP_EVERY           1             ! checkpoint and rebalance every CP_EVERY saves
rebalance          F             ! rebalance at each checkpoint if T
time_end           720           ! final time (hours)
resume             -1            ! restart from checkpoint (negative means fresh restart)
