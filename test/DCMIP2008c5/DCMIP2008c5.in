max_level	 6           ! maximum level of resolution
zlevels          26          ! number of vertical levels
adapt_trend      T           ! adapt on trend (T) or variables (F)
threshold	 1.0         ! threshold
min_allowed_mass 0.7         ! minimum allowed relative mass before remapping		
optimize_grid	 2           ! NO_OPTIM = 0, XU_GRID = 1, HR_GRID = 2
cfl_num          1.5         ! cfl number
pressure_save    850         ! save vertical layer closest to this pressure (hPa)
Laplace_order    0           ! 0 = no diffusion, 1 = Laplacian diffusion
dt_write         240         ! minutes
CP_EVERY         6           ! checkpoint and rebalance every CP_EVERY saves
time_end         720   	     ! hours
resume           -1          ! restart from checkpoint (negative means fresh restart)
